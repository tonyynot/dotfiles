[battery]
interval=2
color=#50fa7b

[wifi]
command=iwgetid -r | tr '\n' ' ' && grep $(iwgetid -m | awk '{ printf "%s", $1 }') /proc/net/wireless | awk '{ printf "%i%\n", int($3 * 100 / 70) }'
instance=wlp11s0f3u1
interval=5
label=<span color="#fabd2f"> </span>

[mediaplayer]
command=mpc current
interval=2
label=<span color="#fabd2f">♫ </span>
min_width=100
align=center
color=#fabd2f

